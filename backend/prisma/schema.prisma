generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Catergory {
  id    Int @id @default(autoincrement())
  img   String
  name  String
}

model Restaurant {
  id    Int   @id @default(autoincrement())
  img   String
  shop  String
  name  String
  rating      Float    @default(0)
  reviewCount Int      @default(0)
  createdAt   DateTime @default(now())
  reviews     Review[]
  openHour    String?
  closeHour    String?
  discount    String?
  freeDrink   Boolean
  partyJellof Boolean
}

model Review {
  id           Int      @id @default(autoincrement())
  rating       Int      // 1-5
  comment      String
  createdAt    DateTime @default(now())
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
}
